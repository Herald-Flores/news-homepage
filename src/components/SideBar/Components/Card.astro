---
interface Props {
	id: number;
  title: string;
  body: string;
}

const {id, title, body} = Astro.props;
---

<li>
	<a href="#" class="block max-w-sm px-0 pb-4 pt-6">
		<h3 class="mb-2 text-xl font-bold tracking-tight text-neutral-white dark:text-neutral-dark hover:text-primary dark:hover:text-primary">
			{title}
		</h3>
		<p class="font-normal text-neutral-grayish dark:text-neutral-600">
			{body}
		</p>
	</a>
</li>
